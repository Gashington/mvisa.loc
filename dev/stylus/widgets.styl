@import '/mixin/mixins'
@import '/mixin/sprite'

/*Блок header*/

.b-header
  clearfix()
  padding 18px 0
  background url("/img/bg/pattern.jpg")
  font-size 0
  white-space nowrap
.b-header__item
  display inline-block
  vertical-align top
.b-header__item_1
  margin 0 45px 0 0
.b-header__item_2
  margin 25px 66px 0 0
.b-header__item_3
  margin 17px 30px 0 0
.b-header__item_4
  margin 17px 0 0 0

/*блок b-slogan*/
.b-slogan
  color white
  font-size 18px
  font-weight bold
  text-transform uppercase

/*блок телефонов и время работы*/
.b-phone
.b-worktime
  color #ffffff
  font-size 16px
.b-phone_bold
  font-size 18px
  font-weight bold
/*блок footer*/
.b-footer
  padding 27px 0 31px 0
  background url("../img/bg/pattern.jpg")
  font-size 0
.b-footer-item
  display inline-block
  vertical-align top
.b-footer-item_1
  margin 0 200px 0 0
.b-footer-item_2
  margin 27px 168px 0 0
  /*блок copyrgt*/
.b-copyrgt
  color #ffffff
  font-size 16px
  /*блок меню*/
.b-mainnaw
  background #ffffff
  font-size 0
.b-mainnaw__item
  position relative
  display inline-block
  &:before
    content ''
    position absolute
    top 10px
    left -1px
    display block
    width 1px
    height 40px
    background #a7d8ec
  &:first-child
    &:before
      display none
.b-mainnaw__link
  display table-cell
  width 122px
  height 57px
  padding 0 15px
  border-top 4px solid white
  vertical-align middle
  color #666666
  font-size 15px
  text-align center
  text-transform uppercase
  cursor pointer
.b-mainnaw__item:hover
.b-mainnaw__item.active
  .b-mainnaw__link
    border-top 4px solid #48aacf
    background #a7d8ec
    color #ffffff
  &:before
    display none

/*блок слайдера*/
.b-slider
  min-height 400px
  background url("../img/bg/slider-bg.png")
.b-slider__inner
  position relative
  min-height 400px
.b-slider__spinner
  position absolute
  top 160px
  cursor pointer
  &.b-slider__spinner_left
    left 0
  &.b-slider__spinner_right
    right 0
.b-slider__control
  position absolute
  bottom 62px
  display block
  width 100%
  font-size 0
  text-align center
.b-slider__control-item
  display inline-block
  margin 0 0 0 7px
  cursor pointer
  &:first-child
    margin 0

    /*Блок слайда*/
.b-slide
  padding 125px 211px
  text-align center
  vertical-align middle
.b-slide__title
  margin 0
  color #ffffff
  font-size 36px
  font-weight bold
  line-height 36px
  &.b-slide__title_sub
    color #ffc938
.b-slide__text
  padding 10px 0
  color white
  font italic 18px 'PT Sans'

/*блок whyus*/
.b-whyus
  position relative
.b-whyus__decor
  position absolute
  left 0
  width 100%
  height 7px
.b-whyus__decor_top
  top -7px
  background url("../img/bg/decor-top.png") repeat-x
.b-whyus__decor_bottom
  bottom -7px
  background url("../img/bg/decor-bottom.png") repeat-x
.b-whyus__wrap
  padding 44px 0 0 0
.b-whyus__list
  margin 0 0 0 -43px
  font-size 0
.b-whyus__option
  position relative
  display inline-block
  width 298px
  margin 0 0 45px 43px
  padding 10px 5px 10px 84px
  border 4px solid #a7d8ec
.b-option__icon
  position absolute
  top 8px
  left 9px
.b-option__title
  color #71c3df
  font-size 20px
  font-weight bold
  text-transform uppercase
.b-option__text
  font-size 16px
  line-height 12px

/*блок условия и тарифы на шенген*/
.b-condition
  background #0b97c4
.b-condition__bg
  padding 42px 0 0 0
  min-height 1115px
  background url("../img/bg/tl-corner.png") -216px -102px no-repeat, url('../img/bg/tr-corner.png') right top no-repeat, url('../img/bg/br-corner.png') 230% 140% no-repeat, url('../img/bg/bl-corner.png') left bottom no-repeat
.b-condition__wrap
  margin 42px 0 0 0
  &:first-child
    margin 0
.b-condition__table
  width 100%
  background #0b97c4
  color #ffffff
  text-align center
.b-condition__country
  padding 0 10px
  font-size 36px
  font-weight bold
  text-transform uppercase
.b-condition__type
  text-transform uppercase
.b-condition__price
  padding 0 30px
  font-weight bold
.b-condition-list__item
  clearfix()
  display block
  width 100%
.b-condition-list__text_left
  float left
  color white
  text-decoration none
  &:before
    content ""
    display inline-block
    margin 0 6px 0 0
    spriteImage($s-sarr)
    sprite($s-sarr)
.b-condition-list__text_right
  float right

  /*блок таблиц*/
.b-table__title
  padding 15px 0
  border-top 2px solid #ffffff
  border-right 2px solid #ffffff
  border-bottom 2px solid #ffffff
  border-left 2px solid #ffffff
  background #ffffff
  color #ffba00
  font-size 18px
  text-align center
  text-transform uppercase
.b-table__title_orange
  background #ffc938
  border none
  border-top none
  border-right none
  border-bottom none
  border-left 2px solid #ffd974
  color #ffffff
  &:first-child
    border none
.b-table__td
  padding 5px
  border 2px solid #ffffff
.b-table__td_nb
  border none

/*блок worksteps*/
.b-worksteps
  padding 43px 0  0 0
  background url("../img/bg/worksteps_bg.jpg")
  background-size cover
.b-worksteps__list
  font-size 0
.b-worksteps__item
  display inline-block
  vertical-align top
  width 33%
  padding 0 10px 50px
  text-align center
.b-worksteps__img
  margin 0 0 10px 0
.b-worksteps__caption
  color #ffffff
  font-size 18px
  font-weight bold
  text-transform uppercase
.b-worksteps__figure
  margin 0

/*блок reviews*/
.b-reviews
  padding 43px 0 45px 0
.b-reviews__wrap
  width 845px
  margin 0 auto
.b-review
  margin 40px 0 0 0
  font-size 0
  &:first-child
    margin 0
.b-review__img
.b-review__wrap
  display inline-block
  vertical-align top
.b-review__img
  margin 0 49px 0 0
.b-review__img_right
  margin 0 0 0 49px
.b-review__wrap
  width 690px
.b-review__text
  padding 10px 0 0 0
  font italic 16px 'PT Sans'
.b-review__text_right
  text-align right
.b-review__respondent
  color #71c3df
  font italic 16px 'PT Sans'
.b-review__respondent_right
  text-align right

/*блок контактов*/
.b-requisites
  padding 45px 0 40px 0
  font-size 0
.b-requisites__map
.b-requisites__inner
  display inline-block
  vertical-align top
.b-requisites__map
  width 491px
  height 214px
  margin 0 42px 0 0

/*Блоск requisites*/
.b-requisites__item
  display inline-block
  vertical-align top
  margin 0 0 0 35px
  &:first-child
    margin 0
.b-requisites__title
  margin 0 0 9px 0
  color #71c3df
  font-size 16px
  font-weight bold
.b-requisites__phone
  color #666666
  font-size 16px
.b-requisites__phone_bold
    font-size 18px
    font-weight bold
.b-requisites__address
.b-requisites__worktime
  color #666
  font-size 16px

/*блок форм*/
.b-form
  display inline-block
  padding 55px 105px
  background url("../img/bg/cloud-bg.png") no-repeat
.b-form__wrap
  position relative
  width 530px
  padding 36px 0
  background url("../img/bg/gplaypattern.png")
.b-form__plane
  position absolute
  bottom -50px
  left -50px
  width 387px
  height 91px
  background url("../img/bg/plane-bg.png") no-repeat

.b-form__title
  margin 0 0 17px 0
  color #71c3df
  font-size 28px
  text-transform uppercase
  text-align center
.b-form__group
  padding 0 40px
.b-form__label
  display block
  margin 0 0 4px 0
  color #474747
.b-form__label_inline
  display inline-block
  margin 0 15px 0 0
  word-spacing 15px
.b-form__itext
  width 100%
  height 30px
  padding 0 8px
  border 1px solid #474747
  outline none
  background #ffffff
  color #7c7c7c
  font italic 16px 'PT Sans'
  &:active
  &:focus
    border 1px solid #71c3df
.b-form__itext_inline
  width auto
  max-width 40px
  text-align center
.b-form__group
  margin 8px 0 0 0
.b-form__group_inner
  display inline-block
  margin  0 0  0 26px
  padding 0
  white-space nowrap
  &:first-child
    margin 0
.b-form__group_btns
  margin 19px 0 0 0
.b-form__send
  width 100%
  border 3px solid #48aacf
  background none
  color #ffba00
  font-size 29px
  font-weight bold
  text-transform uppercase
  &:hover
    background #48aacf
.b-form__spiner
  position relative
  top 3px
  color #7c7c7c
  font italic 30px 'PT Sans'
  line-height 30px
  cursor pointer
.b-form__spiner_left
  margin  0 10px 0 0
.b-form__spiner_right
  margin  0 0 0 10px
